+/**
+ * Type declarations for scribe.js-ocr
+ * Added via patch-package for Auditaria
+ */
+
+export interface ScribeInitParams {
+  pdf?: boolean;
+  ocr?: boolean;
+  font?: boolean;
+}
+
+export interface ScribeRecognizeOptions {
+  mode?: 'speed' | 'quality';
+  langs?: string[];
+  modeAdv?: 'lstm' | 'legacy' | 'combined';
+  combineMode?: 'conf' | 'data' | 'none';
+  vanillaMode?: boolean;
+  config?: Record<string, unknown>;
+}
+
+export interface MuPDFScheduler {
+  drawPageAsPNG(args: {
+    page: number;
+    dpi?: number;
+    color?: boolean;
+    skipText?: boolean;
+  }): Promise<string>;
+}
+
