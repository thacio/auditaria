{
  "name": "@thacio/browser-agent",
  "version": "0.1.0",
  "description": "Browser automation agent for Auditaria CLI using Stagehand",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thacio/auditaria.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "node ../../scripts/build_package.js",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:ci": "vitest run",
    "typecheck": "tsc --noEmit",
    "test:extract": "npx tsx scripts/test-extract.ts",
    "test:integration": "npx tsx scripts/test-tool-integration.ts"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@browserbasehq/stagehand": "https://github.com/thacio/stagehand/releases/latest/download/stagehand-core.tgz",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=20"
  },
  "peerDependencies": {
    "@google/gemini-cli-core": "*",
    "playwright": "^1.52.0"
  },
  "peerDependenciesMeta": {
    "@google/gemini-cli-core": {
      "optional": true
    },
    "playwright": {
      "optional": true
    }
  }
}
