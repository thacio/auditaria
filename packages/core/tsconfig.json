{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "composite": true,
    "types": ["node", "vitest/globals"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@google/gemini-cli-core": ["./index.ts"]
    }
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../search" }]
}
